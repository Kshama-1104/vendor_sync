{
  "name": "event-stream",
  "version": "1.0.0",
  "description": "High-throughput, low-latency event streaming and processing platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest src/tests/unit",
    "test:integration": "jest src/tests/integration",
    "test:load": "jest src/tests/load",
    "db:migrate": "node src/database/migrations/run.js",
    "db:seed": "node src/database/seeders/run.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "build": "echo 'Build complete'",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "event-streaming",
    "stream-processing",
    "kafka",
    "events",
    "real-time",
    "streaming"
  ],
  "author": "Kshama Mishra",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2",
    "redis": "^4.6.11",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "socket.io": "^4.6.1",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "moment": "^2.30.1",
    "lodash": "^4.17.21",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "ioredis": "^5.3.2",
    "avro-js": "^1.11.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}


